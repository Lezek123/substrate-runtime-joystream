{
  "name": "@joystream/cd-smart-contracts",
  "version": "0.1.0",
  "scripts": {
    "test": "truffle test --network development",
    "start": "ganache-cli --hardfork istanbul --network-id 5777",
    "compile": "truffle compile",
    "lint:contracts": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint": "yarn lint:contracts && yarn lint:js",
    "format": "yarn prettier --write .",
    "checks": "tsc && yarn lint",
    "generate:types:contracts": "yarn compile && typechain --target truffle-v5 'build/**/*.json'",
    "generate:types:meta": "json2ts -i ./metadata/json-schemas/**/*.json -o ./metadata/types",
    "generate:proto": "yarn pbjs -t static-module -w commonjs -o ./protobuffs/index.js ./protobuffs/**/*.proto && yarn pbts -o ./protobuffs/index.d.ts ./protobuffs/**/*.js",
    "generate:all": "yarn generate:types:contracts && yarn generate:proto && yarn generate:types:meta",
    "postinstall": "yarn generate:all"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.0.0",
    "@truffle/contract": "^4.2.28",
    "lodash": "^4.17.20",
    "openzeppelin-solidity": "^3.1.0",
    "truffle": "^5.1.33",
    "truffle-assertions": "^0.9.2",
    "debug": "^4.3.1",
    "protobufjs": "6.10.2",
    "protobuf-fieldmask": "^1.0.2"
  },
  "devDependencies": {
    "@joystream/eslint-config": "^1.0.0",
    "ganache-cli": "^6.12.1",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.60",
    "solhint-plugin-prettier": "^0.0.5",
    "solhint": "^3.3.2",
    "ts-node": "^9.0.0",
    "typechain": "^4.0.0",
    "@typechain/truffle-v5": "^4.0.0",
    "typescript": "^4.0.5",
    "protobuf-jsonschema": "^1.1.1",
    "json-schema-to-typescript": "^10.1.1"
  }
}
