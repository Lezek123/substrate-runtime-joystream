{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://joystream.org/schemas/Language.schema.json",
    "title": "Language",
    "description": "An instance of language that can be referenced by a video / channel",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "name",
        "code"
    ],
    "properties": {
        "name": {
            "type": "string",
            "maxLength": 64,
            "description": "The name of the language (ie. English)"
        },
        "code": {
            "type": "string",
            "minLength": 2,
            "maxLength": 2,
            "description": "ISO 639-1 code of the language (ie. en)"
        }
    }
}
