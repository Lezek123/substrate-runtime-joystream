{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://joystream.org/schemas/ChannelMetadata.schema.json",
    "title": "ChannelMetadata",
    "description": "Joystream Channel's metadata",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "title",
        "description",
        "isPublic"
    ],
    "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1024,
            "description": "The description of a Channel"
        },
        "coverPhotoUrl": {
            "type": [
                "string",
                "null"
            ],
            "minLength": 10,
            "maxLength": 256,
            "description": "Url for Channel's cover (background) photo. Recommended ratio: 16:9."
        },
        "avatarPhotoUrl": {
            "type": [
                "string",
                "null"
            ],
            "minLength": 10,
            "maxLength": 256,
            "description": "Channel's avatar photo. Recommended ratio: 1:1."
        },
        "isPublic": {
            "type": "boolean",
            "description": "Flag signaling whether the channel should be publically listed."
        },
        "language": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "ID of the primary langauge of channel's content"
        },
        "category": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "ID of the primary category of channel's content"
        }
    }
}
