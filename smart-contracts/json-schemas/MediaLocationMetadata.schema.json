{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://joystream.org/schemas/MediaLocationMetadata.schema.json",
  "title": "MediaLocationMetadata",
  "description": "Media location metadata assigned to a content, describing how the associated media can be accessed",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    {
      "required": [ "_type", "dataObjectId" ],
      "description": "Joystream media location",
      "properties": {
        "_type": {
          "type": "string",
          "const": "JoystreamMediaLocation"
        },
        "dataObjectId": {
            "type": "string",
            "minLength": 48,
            "maxLength": 48,
            "description": "Id of the data object in the Joystream runtime dataDirectory module"
        }
      }
    },
    {
      "required": [ "_type", "url" ],
      "description": "Joystream media location",
      "properties": {
        "_type": {
          "type": "string",
          "const": "HttpMediaLocation"
        },
        "url": {
          "type": "string",
          "minLength": 10,
          "maxLength": 256,
          "description": "The http url pointing to the media"
        },
        "port": {
          "type": [
              "integer",
              "null"
          ],
          "minimum": 0,
          "maximum": 65535,
          "description": "The port to use when connecting to the http url (defaults to 80)"
        }
      }
    }
  ]
}
