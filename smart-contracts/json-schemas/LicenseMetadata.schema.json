{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://joystream.org/schemas/LicenseMetadata.schema.json",
  "title": "LicenseMetadata",
  "description": "License metadata assigned to a specific content",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    {
      "description": "User defined license (Creative Commons / Public Domain)",
      "required": [ "_type", "content" ],
      "properties": {
        "_type": {
          "type": "string",
          "const": "UserDefinedLicense"
        },
        "content": {
          "type": "string",
          "minLength": 10,
          "maxLength": 4096,
          "description": "Custom license content"
        }
      }
    },
    {
      "description": "Known license reference (Creative Commons / Public Domain)",
      "required": [ "_type", "knownLicenseId" ],
      "properties": {
        "knownLicense": {
          "type": "integer",
          "minimum": 1,
          "description": "ID of existing KnownLicense to reference"
        },
        "attribution": {
          "type": ["string", "null"],
          "minLength": 3,
          "maxLength": 512,
          "description": "License attribution (if required)"
        }
      }
    }
  ]
}
