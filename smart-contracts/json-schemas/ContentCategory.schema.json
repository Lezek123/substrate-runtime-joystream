{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://joystream.org/schemas/ContentCategory.schema.json",
    "title": "ContentCategory",
    "description": "A single content category available on Joystream platform.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "name"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64,
            "description": "The name of the category"
        },
        "description": {
            "type": [
                "string",
                "null"
            ],
            "maxLength": 1024,
            "description": "The description of the category"
        }
    }
}
